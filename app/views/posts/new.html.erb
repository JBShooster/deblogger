<h1>New Post</h1>

  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for [@author, @post] do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true%>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :category %>
    <%= f.text_field :category %>
  </div>
  <div>
    <%= f.label :author %> <
    <%= f.collection_select(:author_id, Author.all, :id, :full_name, prompt: "Who are you?" ) %>
  </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
