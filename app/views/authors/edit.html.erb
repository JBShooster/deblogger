<h1>Edit <%= @author.first_name %> <%= @author.last_name %></h1>

<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |error|  %>
    <p><font color="red">
    <%= error %>
    </font></p> 
  <% end %>
<% end %>

<%= form_for @author do |f| %>
  <p>
  <%= f.label "First Name" %>
  <%= f.text_field :first_name, autofocus: true%>
  <%= f.label "Last Name" %>
  <%= f.text_field :last_name%>
  </p>
  <%= f.label :Age %>
  <%= f.text_field :age %>
  <%= f.submit "Edit Author"%>
<% end %>
<%= link_to "Delete this author!", author_path, method:"delete", data:{confirm: "You seriously want to destroy an author?"}%>
<br>
<%= link_to "Back", "/authors" %>