<h1>Create a new author!</h1>

<% if @author.errors.any? %>
  <% @author.errors.full_messages.each do |error|  %>
    <p><font color="red">
    <%= error %>
    </font></p> 
  <% end %>
<% end %>

<%= form_for @author do |f| %>
  <p>
  <%= f.label "First Name" %>
  <%= f.text_field :first_name, autofocus: true%>
  <%= f.label "Last Name" %>
  <%= f.text_field :last_name%>
  </p>
  <%= f.label :Age %>
  <%= f.text_field :age %>
  <%= f.submit "Add Author"%>
<% end %>

<br>
<%= link_to "Back", "/authors" %>

